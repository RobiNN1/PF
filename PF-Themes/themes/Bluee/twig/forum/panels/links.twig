        {{ locale.bluee_019 }}
    </a>

    {% if constant('iMEMBER') %}
        <a class="d-block{{ (get.section == 'tracked') ? ' text-dark' : '' }}" href="{{ constant('FORUM') }}index.php?section=tracked">
