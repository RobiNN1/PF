<div class="mb-3">
    {% if constant('iMEMBER') %}
        <a href="{{ constant('FORUM') }}newthread.php{{ forum_id }}" class="btn btn-primary btn-block d-none d-sm-block m-b-20">
            <i class="fas fa-comment"></i> {{ locale.forum_0057 }}
        </a>
    {% endif %}

    <a class="d-block m-b-5{{ (get.section == 'latest') ? ' text-dark' : '' }}" href="{{ constant('FORUM') }}index.php?section=latest">
